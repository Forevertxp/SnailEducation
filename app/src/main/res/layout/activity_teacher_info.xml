<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tree.love.animtabsview.demo.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/infoRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="100dp">

        <ImageView
            android:id="@+id/teacherAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <tree.love.animtabsview.AnimTabsView
        android:id="@+id/publiclisten_tab"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/infoRL"
        android:background="#00000000"></tree.love.animtabsview.AnimTabsView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/publiclisten_tab"></FrameLayout>

</RelativeLayout>
