<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        app:siRadius="6dp"
        app:siBorderWidth="0dp"
        app:siBorderColor="@color/lightgrey"
        app:siSquare="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#3b3b3b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_avatar"
        android:textColor="#b3b3b3"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_below="@+id/iv_avatar"
        android:layout_height="1.5dp" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@+id/line"
        android:textColor="#b3b3b3"
        android:textSize="14sp" />

    <com.snail.education.common.NoScrollGridView
        android:id="@+id/imageGridView"
        android:layout_below="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:verticalSpacing="5dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageGridView">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/likeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/likeText"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/likeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:layout_toLeftOf="@+id/divider" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="@color/lightgrey"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/messageImage" />

        <ImageView
            android:id="@+id/messageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/messageText"
            android:layout_margin="5dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/enterImage"
            android:padding="3dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/enterImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <ListView
        android:id="@+id/commentListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL"></ListView>

</RelativeLayout>