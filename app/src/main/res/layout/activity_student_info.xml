<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tree.love.animtabsview.demo.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/infoRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:minHeight="120dp">

        <ImageView
            android:id="@+id/studentAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:layout_toRightOf="@+id/studentAvatar" />

        <TextView
            android:id="@+id/schoolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/studentAvatar"
            android:textSize="13sp"
            android:layout_marginLeft="3dp"
            android:padding="5dp"
            android:textColor="@color/whitesmoke"
            android:layout_below="@+id/nameText" />

        <TextView
            android:id="@+id/speakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/studentAvatar"
            android:textSize="13sp"
            android:layout_marginLeft="3dp"
            android:padding="5dp"
            android:textColor="@color/whitesmoke"
            android:layout_below="@+id/schoolText" />
    </RelativeLayout>

    <WebView
        android:id="@+id/studentWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoRL" />

</RelativeLayout>

