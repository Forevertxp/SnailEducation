<com.snail.education.common.SEOverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quanjing.weitu.app.ui.user.MWTUserInfoEditActivity">

    <RelativeLayout
        android:id="@+id/updateRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:orientation="vertical">

            <LinearLayout style="@style/SectionAreaStyle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <Button
                        android:id="@+id/AvatarButton"
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="头像" />

                    <com.snail.circularimageview.CircularImageView
                        android:id="@+id/AvatarImageView"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_launcher" />
                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

            </LinearLayout>


            <LinearLayout
                style="@style/SectionAreaStyle"
                android:layout_marginTop="28dp">

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的昵称" />

                    <EditText
                        android:id="@+id/et_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:hint="填写昵称" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/NicknameButton"
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="性别" />


                </RelativeLayout>


                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="个性签名" />

                    <EditText
                        android:id="@+id/et_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:hint="我很懒，什么都没留下" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

            </LinearLayout>

            <LinearLayout
                style="@style/SectionAreaStyle"
                android:layout_marginTop="28dp">

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="真实姓名" />

                    <EditText
                        android:id="@+id/et_realname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:hint="填写真实姓名" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="手机号码＊" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="未知的手机号码"
                        android:textColor="@color/LightTextColor"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        style="@style/ManualSectionItemButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="邮箱" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:textSize="16sp"
                        android:hint="填写邮箱" />

                </RelativeLayout>

                <View
                    style="@style/horizontal_line_1px"
                    android:background="@color/lightgrey" />

            </LinearLayout>

            <Button
                android:id="@+id/user_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_selector"
                android:text="保 存"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>
</com.snail.education.common.SEOverScrollView>