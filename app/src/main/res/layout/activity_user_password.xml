<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.snail.education.ui.me.com.snailedu.photo.com.snailedu.photo.activity.UserUpdateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_search_bg">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="手 机 号："
            android:textSize="14sp"
            android:gravity="center"
            android:background="@color/gainsboro" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_code"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_search_bg">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="验 证 码："
                android:textSize="14sp"
                android:gravity="center"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="phone"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_code"
                android:background="@null" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_search_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="密 码:"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_pass"
                android:background="@null" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pass_again"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="确认密码："
                android:gravity="center"
                android:textSize="14sp"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_pass_again"
                android:background="@null" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn_normal"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="提  交" />


</LinearLayout>
