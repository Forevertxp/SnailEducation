<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tree.love.animtabsview.demo.MainActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/orgAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="150dp" />

    <tree.love.animtabsview.AnimTabsView
        android:id="@+id/publiclisten_tab"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/orgAvatar"
        android:background="#00000000"></tree.love.animtabsview.AnimTabsView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/publiclisten_tab"></FrameLayout>

</RelativeLayout>
