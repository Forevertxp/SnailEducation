<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_grey"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/pop_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_popup_bg"
        android:gravity="center"
        android:text="取消"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pop_cancel"
        android:background="@drawable/shape_popup_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_first"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="清空收藏"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/pop_second"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="清空下载"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/pop_third"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设置"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/pop_fourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
