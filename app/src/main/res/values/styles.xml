<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:textColorHighlight">#990090ff</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/ActionBarBackgroundColor</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:itemTextAppearance">@style/ActionBarItemTextAppearance</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarForegroundColor</item>
    </style>

    <style name="ActionBarItemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/ActionBarForegroundColor</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/ActionBarForegroundColor</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="HugeGrayTextButtonTextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>

    <style name="MediumGrayTextButtonTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>

    <style name="SmallGrayTextButtonTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>

    <style name="BlueColorTextButton" parent="android:Widget">
        <item name="android:textColor">@color/dodgerblue</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlueGlassButton" parent="android:Widget">
        <item name="android:textColor">@drawable/btn_text_white</item>
        <item name="android:background">@drawable/btn_bg_glassblue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="vertical_line_1px">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="horizontal_line_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="TabBarTitleTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/TabBarForegroundColor</item>
    </style>

    <style name="TabBarTitleTextAppearanceSelected" parent="TabBarTitleTextAppearance">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TabBarIconTextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/TabBarForegroundColor</item>
    </style>

    <style name="TabBarIconTextAppearanceSelected" parent="TabBarIconTextAppearance">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ManualSectionItemButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_pressed_gray</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>

    <style name="SectionAreaStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- sharesdk -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- calender -->
    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Navigation Header 微信支付结果 -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">#FFE1E8EB</item>
    </style>
</resources>
